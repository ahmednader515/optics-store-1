# Database
# For PostgreSQL (current Prisma schema)
DATABASE_URL="postgresql://username:password@localhost:5432/optics_store"

# Direct database connection (for connection pooling)
DIRECT_DATABASE_URL="postgresql://username:password@localhost:5432/optics_store"

# Database connection pool settings
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_ACQUIRE_TIMEOUT=30000

# For MongoDB (alternative)
# MONGODB_URI="mongodb://localhost:27017/optics_store"

# Authentication
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# File Upload
UPLOADTHING_SECRET="your_uploadthing_secret_here"
UPLOADTHING_APP_ID="your_uploadthing_app_id_here"

# Email
RESEND_API_KEY="your_resend_api_key_here"

# Face Shape Detection
# Using face-api.js (free, open-source, no API keys required)
# Models are stored in /public/models directory

# External APIs (not used anymore - using face-api.js instead)
# Betaface API (free tier available, no credit card required)
BETAFACE_API_KEY="your_betaface_api_key_here"
BETAFACE_API_SECRET="your_betaface_api_secret_here"
# Luxand.cloud API (405 method not allowed error)
LUXAND_API_KEY="your_luxand_api_key_here"
# Rosto.io API (authentication issues)
ROSTO_API_KEY="your_rosto_api_key_here"
# Hiface API (specialized in face shape detection)
HIFACE_API_KEY="your_hiface_api_key_here"
# Face++ API (backup - not used anymore)
FACEPLUSPLUS_API_KEY="your_faceplusplus_api_key_here"
FACEPLUSPLUS_API_SECRET="your_faceplusplus_api_secret_here"

# Environment
NODE_ENV="development"
